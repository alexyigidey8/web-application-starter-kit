{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Roles'|trans }} | {{ parent() }}{% endblock %}

{% block main %}
	<h1>
		{{ 'Roles'|trans }}
		<a class="btn btn-primary btn-sm"
			href="{{ url('members-area.roles.new') }}">
			{{ 'New'|trans }}
		</a>
	</h1>
	<ol class="breadcrumb">
		<li>
			<a href="{{ url('members-area') }}">
				{{ 'Home' | trans }}
			</a>
		</li>
		<li class="active">
			{{ 'Roles' | trans }}
		</li>
	</ol>
	<div class="table-responsive">
		<table class="table table-striped table-condensed{% if roles|length %} data-table dt-responsive{% endif %}" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th class="all">{{ 'Name'|trans }}</th>
					<th>{{ 'Description'|trans }}</th>
					<th>{{ 'Role'|trans }}</th>
					<th>{{ 'Priority'|trans }}</th>
					<th>{{ 'Created'|trans }}</th>
					<th class="no-sort" width="100">{{ 'Actions'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for role in roles %}
					<tr>
						<td>{{ role.getName()|trans }}</td>
						<td>{{ role.getDescription()|trans }}</td>
						<td>{{ role.getRole() }}</td>
						<td>{{ role.getPriority() }}</td>
						<td>{{ role.getTimeCreated() | date('Y-m-d H:i:s') }}</td>
						<td>
							<a class="btn btn-sm btn-default filter-submit margin-bottom"
								data-toggle="tooltip" title="{{ 'Edit'|trans }}"
								href="{{ url('members-area.roles.edit', { id : role.getId() }) }}">
								<i class="fa fa-fw fa-cog"></i>
							</a>
							<a class="btn btn-sm btn-default filter-submit margin-bottom"
								data-toggle="tooltip" title="{{ 'Remove'|trans }}"
								href="{{ url('members-area.roles.remove', { id : role.getId() }) }}">
								<i class="fa fa-fw fa-times"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="99">{{ 'No roles yet'|trans }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
